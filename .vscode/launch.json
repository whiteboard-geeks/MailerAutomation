{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "FLASK_RUN_PORT": "8080",
                "ENABLE_DEV_SCHEDULING": "false",
                "ENV_TYPE": "test"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=8080"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "--app=app.celery",
                "worker",
                "--pool=solo",
                "--loglevel=debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "test"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["9400136208070406499284"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Instantly E2E Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/e2e/instantly/test_instantly_e2e.py",
                "--verbose",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENV_TYPE": "test"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Instantly Email Sent Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/integration/instantly/test_instantly_email_sent_integration.py",
                "--verbose",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENV_TYPE": "test"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Instantly Webhook Tracker Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/integration/instantly/test_webhook_tracker_integration.py",
                "--verbose",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENV_TYPE": "test",
                "REDISCLOUD_URL": "redis://localhost:6379"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "All Instantly Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/instantly/",
                "tests/integration/instantly/",
                "tests/e2e/instantly/",
                "--verbose",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENV_TYPE": "test",
                "REDISCLOUD_URL": "redis://localhost:6379"
            },
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Flask + Celery",
            "configurations": ["Flask", "Celery Worker"],
            "preLaunchTask": "Start Redis",
            "postDebugTask": "Stop Redis"
        },
        {
            "name": "Instantly E2E Compound",
            "configurations": ["Flask", "Celery Worker", "Instantly E2E Tests"],
            "stopAll": true
        },
        {
            "name": "Instantly Email Sent Integration Compound",
            "configurations": [
                "Flask",
                "Celery Worker",
                "Instantly Email Sent Integration Tests"
            ],
            "stopAll": true
        },
        {
            "name": "Instantly Webhook Tracker Integration Tests Compound",
            "configurations": [
                "Flask", 
                "Celery Worker", 
                "Instantly Webhook Tracker Integration Tests"
            ],
            "stopAll": true
        },
        {
            "name": "All Instantly Tests Compound",
            "configurations": [
                "Flask", 
                "Celery Worker", 
                "All Instantly Tests"
            ],
            "stopAll": true
        }
    ]
}